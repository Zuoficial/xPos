<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoPrincipal">

    <Button
        android:id="@+id/b_borrarTodo"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/b_regresar_claro"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:text="R"
        android:textColor="@color/blanco"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/t_titulo_tamano"
        app:layout_constraintTop_toTopOf="@+id/b_limpiar_claro" />

    <Button
        android:id="@+id/b_id"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:gravity="center"
        android:text="1"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_id_menos"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="48dp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_id_mas"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/b_limpiar_claro"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="-14dp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:text="L"
        android:textColor="@color/blanco"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/t_titulo_cant"
        app:layout_constraintTop_toTopOf="@+id/t_titulo_cant" />

    <TextView
        android:id="@+id/t_titulo_cant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="Cantidad a arriesgar"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/t_titulo_tamano"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/t_titulo_tamano" />


    <EditText
        android:id="@+id/et_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:hint="Cantidad"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="28dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/et_cantidad_mostrador"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_cantidad_mostrador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:hint="Cantidad"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/t_titulo_porcen"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/t_cantidad_mostrador_mantener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:selectAllOnFocus="true"
        android:text=""
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="28dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/et_cantidad"
        app:layout_constraintTop_toTopOf="@+id/et_cantidad" />

    <TextView
        android:id="@+id/t_titulo_porcen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:focusable="false"
        android:text="Porcentaje"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/et_porcentaje"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_porcentaje"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginStart="60dp"
        android:hint="Porcentaje"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/t_titulo_referencia"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/t_titulo_referencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:focusable="false"
        android:text="Referencia de conversion"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/et_referencia"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/et_referencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Referencia"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />

    <TextView
        android:id="@+id/t_titulo_tamano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:focusable="false"
        android:text="TamaÃ±o posicion"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/t_posicion_tamano"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/t_mantener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:text="M"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <EditText
        android:id="@+id/et_precision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="P"
        android:inputType="numberDecimal"
        android:maxLength="1"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/t_posicion_tamano"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:focusable="false"
        android:gravity="center"
        android:maxLength="10"
        android:text="TP"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/t_posicion_lote"
        app:layout_constraintStart_toStartOf="@+id/t_posicion_lote" />

    <TextView
        android:id="@+id/t_margen"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:focusable="false"
        android:gravity="center"
        android:maxLength="10"
        android:text="Margen"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/t_seguro"
        app:layout_constraintStart_toStartOf="@+id/t_seguro" />

    <TextView
        android:id="@+id/t_margenC"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:focusable="false"
        android:gravity="center"
        android:maxLength="10"
        android:text="MC"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/t_seguroC"
        app:layout_constraintStart_toStartOf="@+id/t_seguroC" />

    <TextView
        android:id="@+id/t_seguroC"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:maxLength="10"
        android:text="SC"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/t_seguro"
        app:layout_constraintTop_toTopOf="@+id/t_seguro" />

    <TextView
        android:id="@+id/t_posicion_lote_conversion"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:focusable="false"
        android:gravity="center"
        android:maxLength="10"
        android:text="LC"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/t_margenC"
        app:layout_constraintStart_toStartOf="@+id/t_margenC" />

    <TextView
        android:id="@+id/t_seguro"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLength="10"
        android:text="Seguro"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.649"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922" />

    <TextView
        android:id="@+id/t_posicion_tamano_conversion"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:focusable="false"
        android:maxLength="10"
        android:text="TPC"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/t_posicion_lote_conversion"
        app:layout_constraintStart_toStartOf="@+id/t_posicion_lote_conversion" />

    <TextView
        android:id="@+id/t_posicion_lote"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:focusable="false"
        android:gravity="center"
        android:maxLength="10"
        android:text="Lotes"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/t_margen"
        app:layout_constraintStart_toStartOf="@+id/t_margen" />


    <Button
        android:id="@+id/b_xt"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:text="xt"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <Button
        android:id="@+id/b_pr"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:text="Pr"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/b_xt"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_apalancamiento"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:text="100X"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/b_pr"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_redondeo_descendente"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:gravity="center"
        android:text="RD"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/b_apalancamiento"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_redondeo_ascendente"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:gravity="center"
        android:text="RA"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/b_redondeo_descendente"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>